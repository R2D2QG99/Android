<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/fondo3"
android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Nombre"
    android:textSize="24sp" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="24sp"
    android:id="@+id/et_nombre"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Apellido paterno"
    android:textSize="24sp" />

<EditText
    android:id="@+id/et_app"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="24sp" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Apellido materno"
    android:textSize="24sp" />

<EditText
    android:id="@+id/et_apm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="24sp" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Calle"
    android:textSize="24sp" />

<EditText
    android:id="@+id/et_calle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="24sp" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Colonia"
    android:textSize="24sp" />

<EditText
    android:id="@+id/et_col"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="24sp" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Municipio"
    android:textSize="24sp" />

<EditText
    android:id="@+id/et_mun"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="24sp" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Puesto"
    android:textSize="24sp" />

<EditText
    android:id="@+id/et_pues"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="24sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Celular"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_cel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Usuario"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ContraseÃ±a"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp" />
<Button
    android:id="@+id/bt_registrar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Registrar"
    android:textSize="24sp"
    android:gravity="center"/>
    <Button
        android:id="@+id/bt_consultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:textSize="24sp"
        android:gravity="center"/>


    <ProgressBar
        android:id="@+id/progressbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
</LinearLayout>

</ScrollView>
