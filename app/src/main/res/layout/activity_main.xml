<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/login"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Usuario"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduzca su nombre de usuario"
        android:textSize="24sp"
        android:drawableLeft="@drawable/candado"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Introduzca su contraseña"
        android:text="Contraseña"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textSize="24sp"
        android:drawableLeft="@drawable/candado"
        android:hint="Introduzca su contraseña"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_ingresar"
            android:layout_width="182dp"
            android:layout_height="47dp"
            android:layout_marginBottom="@dimen/fab_margin"
            android:background="@drawable/fondo3"
            android:drawableLeft="@drawable/unlock"
            android:text="   Ingresar"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bt_registrar"
            android:layout_width="182dp"
            android:layout_height="44dp"
            android:background="@drawable/fondo3"
            android:drawableLeft="@drawable/crear"
            android:text="   Registrar"
            android:textSize="24sp" />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
</LinearLayout>
</ScrollView>